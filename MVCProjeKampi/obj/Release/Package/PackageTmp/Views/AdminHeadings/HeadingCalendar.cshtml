@using System.Collections.Specialized


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    //Layout = null;
}



<head>
    <title>Takvim</title>

    <!-- fullCalendar -->
    <link rel="stylesheet" href="~/Content/AdminLTE-3.0.4/plugins/fullcalendar-daygrid/main.min.css">
    <link rel="stylesheet" href="~/Content/AdminLTE-3.0.4/plugins/fullcalendar-timegrid/main.min.css">
    <link rel="stylesheet" href="~/Content/AdminLTE-3.0.4/plugins/fullcalendar-bootstrap/main.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.0.1/fullcalendar.min.css">

</head>

<body>
    <h2 style="text-align: center"><b>Takvim Sayfası</b></h2>
    <div id="calender"></div>

    <div class="container">
        <div id='calendar'></div>
        <br />
    </div>

    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.16.0/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.0.1/fullcalendar.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#calendar').fullCalendar({
                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                firstDay: 1, //The day that each week begins (Monday=1)
                slotMinutes: 60,
                events: '@Url.RouteUrl(new {action = "GetHeadingCalendarDatas", controller = "AdminHeadings"})'
            });
        });
    </script>
</body>

