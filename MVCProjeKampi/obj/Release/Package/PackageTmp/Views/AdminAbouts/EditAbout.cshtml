@model EntityLayer.Concrete.About
@{
    ViewBag.Title = "Site Hakkında Düzenleme - MVC Proje Kampı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<title>@ViewBag.Title</title>

<h3 class="h3">Hakkımızda Düzenleme</h3> <br/>

<div class="card card-primary card-outline">
    @using (Html.BeginForm("EditAbout", "AdminAbouts", FormMethod.Post))
    {

        <!-- /.card-header -->
        <div class="card-body">
            <div class="form-group">
                @Html.HiddenFor(x => x.AboutId)
                @Html.HiddenFor(x=>x.AboutStatus)
                @Html.TextBoxFor(x => x.AboutHeader, new { placeholder = "Alıcı: ", @class = "form-control" })
                @Html.ValidationMessageFor(x=>x.AboutHeader,"",new {@class="text-danger" , @style="font-weight: bold"})
            </div>
            <div class="form-group">
                @Html.TextAreaFor(x => x.AboutText,
                    new { id = "compose-textarea", @class = "form-control", style = "height: 300px;" })

            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <div class="float-right">
                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
            </div>
        </div>
        <!-- /.card-footer -->
    }
</div>

<script>
    $(function () {
        //Add text editor
        $('#compose-textarea').summernote().noConflict;
    })


</script>
