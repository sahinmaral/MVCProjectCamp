@{
    ViewBag.Title = "Yeni Mesaj Sayfası - MVC Proje Kampı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

@model EntityLayer.Concrete.Message

<title>@ViewBag.Title</title>

<!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <a href="/admin-profil/mesajlar/gelen-kutusu" class="btn btn-primary btn-block mb-3">Mesajlara geri dön</a>
                    @Html.Action("GetContactSideMenu", "AdminContacts")
                </div>
                <!-- /.col -->

                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        @using (Html.BeginForm("NewMessage", "AdminMessages", FormMethod.Post))
                        {
                            <div class="card-header">
                                <h3 class="card-title">Yeni Mesaj Oluştur</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.ReceiverUsername, new { placeholder = "Alıcının kullanıcı adı: ", @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.ReceiverUsername, "", new { @class = "text-danger" , @style="font-weight: bold"})
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Subject, new { placeholder = "Konu: ", @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "text-danger", @style = "font-weight: bold" })
                                </div>
                                <div class="form-group">
                                    @Html.TextAreaFor(x => x.MessageContent,
                                        new { id = "compose-textarea", @class = "form-control", style = "height: 300px" })
                                    @Html.ValidationMessageFor(x => x.MessageContent, "", new { @class = "text-danger", @style = "font-weight: bold" })
                                </div>
                                

                                @*  Dosya ekleme sonradan eklenebilir
                                    <div class="form-group">
                                    <div class="btn btn-default btn-file">
                                        <i class="fas fa-paperclip"></i> Dosya Ekle
                                        <input type="file" name="attachment">
                                    </div>
                                    <p class="help-block">Max. 32MB</p>
                                </div>*@
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <div class="float-right">
                                    @*<button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslaklara kaydet</button>*@
                                    <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                                </div>
                                <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Yoksay</button>
                            </div>
                            <!-- /.card-footer -->
                        }
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>



    <script>
        $(function () {
            //Add text editor
            $('#compose-textarea').summernote().noConflict;
        })


    </script>


