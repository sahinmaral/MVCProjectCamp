@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "Yeni Kategory Ekleme - MVC Proje Kampı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<title>@ViewBag.Title</title>

@using (Html.BeginForm("AddCategory", "AdminCategories", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategori Adı : ")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger", @style = "font-weight: bold" })
    <br /><br />
    @Html.Label("Açıklamayı yazınız")
    @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger", @style = "font-weight: bold" })
    <br /><br />
    <button class="btn btn-info">Kaydet</button>
</div>
}
