@using EntityLayer.Concrete
@model List<ImageFile>

@{
    ViewBag.Title = "Galeri - MVC Proje Kampı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<title>@ViewBag.Title</title>

<body class="hold-transition sidebar-mini">


    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <div class="card-title">
                                Site Galerisi
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="card" style="width: 18rem; margin-left:1em">
                                        <img class="card-img-top" src=@item.ImagePath style="width: 18rem; height: 10rem;">
                                        <div class="card-body">
                                            <h5 class="card-title">@item.ImageName</h5>
                                        </div>
                                        <div style="display: flex">
                                            <a href="site-galerisi/resmi-sil/@item.ImageNameForFriendlyUrl" class="btn btn-danger" style="width: 10em;">Resmi Sil</a>
                                            <a href="site-galerisi/resmi-duzenle/@item.ImageNameForFriendlyUrl" class="btn btn-warning" style="width: 10em;">Resmi Güncelle</a>
                                        </div>



                                    </div>
                                }
                                @*@foreach (var item in Model)
                                    {
                                        <div class="col-sm-2">
                                            <a href="@item.ImagePath" data-toggle="lightbox" data-title="@item.ImageName" data-gallery="gallery">
                                                <img src="@item.ImagePath" class="img-fluid mb-2" alt="@item.ImageName"/>
                                            </a>
                                        </div>
                                    }*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <a href="site-galerisi/resim-ekle" class="btn btn-primary" style="width: 10em; margin-left: 0.4em">Resim Ekle</a>

</body>
