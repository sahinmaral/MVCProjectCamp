@model string

@{
    ViewBag.Title = "Şifreni değiştir - MVC Proje Kampı";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<title>@ViewBag.Title</title>

<a href="/admin-profil" class="btn btn-primary"><<  &nbsp;Geri Dön</a>
<br />
<br />

<h3 class="h3">Profil Bilgilerinizi Düzenleyin</h3>
<br />
@using (Html.BeginForm("ChangePassword", "WriterProfiles", FormMethod.Post))
{
    <div class="form-group">

        @Html.Label("Şifre")
        <input type="password" name="password" class="form-control" style="width: 21em"/>
        @Html.ValidationMessageFor(x => x, "", new { @class = "text-danger", @style = "font-weight: bold" })
        <br />
        <br />

        <button class="btn btn-success">Şifreni değiştir</button>
        <br />
    </div>
}