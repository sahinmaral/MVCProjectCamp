@model EntityLayer.Concrete.Category


@{
    ViewBag.Title = "Kategori Güncelleme - MVC Proje Kampı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<title>@ViewBag.Title</title>

@using (Html.BeginForm("UpdateCategory", "AdminCategories", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.CategoryId, new { @readonly = "readonly", @class = "form-control" })

    @Html.Label("Kategori Adı : ")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger", @style = "font-weight: bold" })
    <br /><br />
    @Html.Label("Açıklamayı yazınız")
    @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryDescription , "" , new {@class="text-danger" , @style="font-weight: bold"})
    <br /><br />
    @Html.Label("Durumunu işaretleyiniz")
    <div class="form-check">
        @Html.RadioButtonFor(x => x.CategoryStatus, "True", new { @class = "form-check-input" })
        <label class="form-check-label" for="flexRadioDefault1">
            Onaylandı
        </label>
    </div>
    <div class="form-check">
        @Html.RadioButtonFor(x => x.CategoryStatus, "False", new { @class = "form-check-input" })
        <label class="form-check-label" for="flexRadioDefault2">
            Onaylanmadı
        </label>
    </div>
    <br /><br />
    <button class="btn btn-info">Kaydet</button>
</div>
}

