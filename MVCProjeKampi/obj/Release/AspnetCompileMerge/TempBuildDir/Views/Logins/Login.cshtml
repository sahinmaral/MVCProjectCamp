@using System.Activities.Expressions
@model EntityLayer.DTOs.UserForLoginDto

@{
    ViewBag.Title = "Giriş Yap - MVC Proje Kampı";
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <!-- Custom Theme files -->
    <link href="~/Content/registration/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- web font -->
    <link href="//fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,700,700i" rel="stylesheet">

</head>
<body>
    <!-- main -->
    <div class="main-w3layouts wrapper">
        <h1>MVC Proje Kampı Kullanıcı Girişi</h1>
        <div class="main-agileinfo">
            <div class="agileits-top">

                @using (Html.BeginForm("Login", "Logins", FormMethod.Post))
                {
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Kullanıcı adı" })
                    @Html.ValidationMessageFor(x => x.Username, "", new { @style = "font-weight: bold; color: darkred;" })
                    <br />
                    <br />
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Şifre" })
                    @Html.ValidationMessageFor(x => x.Password, "", new { @style = "font-weight: bold; color: darkred;" })
                    <br />
                    <br />

                    <a href="/">Siteye dön</a>

                    <input type="submit" value="Giriş yap">
                    <a href="/kayit-ol"><input type="button" value="Kayıt ol"></a>
                }



            </div>
        </div>

    </div>
    <!-- //main -->
</body>
</html>
