@using EntityLayer.Concrete
@using PagedList
@using PagedList.Mvc
@model IPagedList<Heading>
@{
    ViewBag.Title = "Yazarların başlıklar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    string statusClass = "";
    string statusMessage = "";
    string deleteButtonClass = "";

    void CheckHeadingStatus(bool headingStatus)
    {
        switch (headingStatus)
        {
            case true:
                statusClass = "badge bg-success";
                statusMessage = "Aktif";
                deleteButtonClass = "btn btn-danger btn-sm";
                break;
            case false:
                statusClass = "badge bg-danger";
                statusMessage = "Pasif";
                deleteButtonClass = "btn btn-danger btn-sm disabled";
                break;
        }
    }
}


<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">

            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 30%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 8%" class="text-center">
                                Durum
                            </th>
                            <th style="width: 30%" class="text-center">
                                Diğer
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.HeadingId
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @item.HeadingDate.ToShortDateString()
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.Writer.User.UserImage">
                                            @item.Writer.User.UserFirstName @item.Writer.User.UserLastName
                                        </li>
                                    </ul>
                                </td>
                                <td class="project-state">
                                    <h3><span class="badge bg-info">@item.Category.CategoryName</span></h3>
                                </td>
                                <td class="project-state">
                                    @{ CheckHeadingStatus(item.HeadingStatus);
                                        <h3><span class="@statusClass">@statusMessage</span></h3>
                                    }
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Headings/HeadingByHeadingId/@item.HeadingId">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>

                                    <a class="btn btn-info btn-sm" href="/AdminHeadings/EditHeading/@item.HeadingId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-success btn-sm" href="/AdminHeadings/EnableHeading/@item.HeadingId">
                                        <i class="fas fa-check-circle">
                                        </i>
                                        Onayla
                                    </a>
                                    <a class="@deleteButtonClass" href="/AdminHeadings/DeleteHeading/@item.HeadingId">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
<a href="/Headings/AddHeading/" class="btn btn-primary">Yeni Başlık Girişi</a>

