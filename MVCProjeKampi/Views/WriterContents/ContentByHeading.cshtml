<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="card" style="height: 13rem">
                <div class="card-body">
                    <h5 class="card-title">Başlık : <b>@item.Heading.HeadingName</b></h5> <br/><br />
                    <h2 class="card-title">Tarih ve Saat : <b>@item.ContentDate.ToShortDateString() @item.ContentDate.ToShortTimeString()</b></h2> <br /><br />
                    @{
                        if (item.ContentText.Length > 50)
                        {
                            content = item.ContentText.Substring(0, 50) + "...";
                        }
                        else
                        {
                            content = item.ContentText;
                        }
                    }
                    <p class="card-text">@content</p>
                </div>
                <a href="#" class="btn btn-primary">Başlığa git</a>
            </div>
        </div>
