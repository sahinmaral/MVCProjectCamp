@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Başlıklar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    string statusClass = "";
    string statusMessage = "";

    void checkHeadingStatus(bool headingStatus)
    {
        switch (headingStatus)
        {
            case true:
                statusClass = "badge bg-success";
                statusMessage = "Aktif";
                break;
            case false:
                statusClass = "badge bg-danger";
                statusMessage = "Pasif";
                break;
        }
    }
}


<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">

            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 30%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 8%" class="text-center">
                                Durum
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @item.HeadingId
                            </td>
                            <td>
                                <a>
                                    @item.HeadingName
                                </a>
                                <br />
                                <small>
                                    @item.HeadingDate.ToShortDateString()
                                </small>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                        @item.Writer.WriterName @item.Writer.WriterSurname
                                    </li>
                                </ul>
                            </td>
                            <td class="project-state">
                                <h3><span class="badge bg-info">@item.Category.CategoryName</span></h3>
                            </td>
                            <td class="project-state">
                                @{  checkHeadingStatus(item.HeadingStatus);
                                    <h3><span class="@statusClass">@statusMessage</span></h3>
                                }
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingId">
                                    <i class="fas fa-folder">
                                    </i>
                                    Yazılar
                                </a>

                                <a class="btn btn-info btn-sm" href="#">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                <a class="btn btn-danger btn-sm" href="#">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>
                            </td>
                        </tr>
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
<a href="/Headings/AddHeading/" class="btn btn-primary">Yeni Başlık Girişi</a>


