@using EntityLayer.Concrete
@using PagedList
@using PagedList.Mvc
@model IPagedList<User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string status = "";
    string statusClass = "";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı adı</th>
        <th>Mail adresi</th>
        <th>Diğer</th>
        <th>Durum</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserId</td>
            <td>@item.UserUsername</td>
            <td>@item.UserEmail</td>
            <td>
                <a href="/admin-profil/yetkilendirmeler/yetki-duzenle/@item.UserUsername" class="btn btn-warning">Kullanıcı İşlemleri</a>
            </td>
            <td>
                @if (item.UserStatus)
                {
                    status = "Normal";
                    statusClass = "badge badge-success";
                }
                else
                {
                    status = "Banlı";
                    statusClass = "badge badge-danger";
                }
                <h3><span class="@statusClass">@status</span></h3>
            </td>
        </tr>


    }

</table>

@Html.PagedListPager((IPagedList)Model,
    p => Url.Action("Index",
        new { p })
    ,
    new PagedListRenderOptions
    {
        LiElementClasses = new List<string>
        {
            {"page-link"}
        },
        UlElementClasses = new List<string>
        {
            {"pagination justify-content-center"}
        }
    }
    )



