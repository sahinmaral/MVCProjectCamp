@using MVCProjeKampi.Models.ViewModels
@model List<UserAndRolesViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string status = "";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı adı</th>
        <th>Mail adresi</th>
        <th>Diğer</th>
        <th>Durum</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.User.UserId</td>
            <td>@item.User.UserUsername</td>
            <td>@item.User.UserEmail</td>
            <td>
                <a href="/AdminAuthorization/GiveAuthorization?userId=@item.User.UserId" class="btn btn-warning">Kullanıcı İşlemleri</a>
            </td>
            <td>
                @if (item.User.UserStatus)
                {
                    status = "Normal";
                }
                else
                {
                    status = "Banlı";
                }
                @status
            </td>
        </tr>


    }
</table>



