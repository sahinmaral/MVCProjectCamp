@using MVCProjeKampi.Models.ViewModels
@model UserAndRolesViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    for (int i = 0; i < Model.Roles.Count; i++)
    {
        switch (Model.Roles[i].Role.RoleName)
        {
            case "Writer":
                Model.Roles[i].Role.RoleName = "Yazar";
                break;
            case "User":
                Model.Roles[i].Role.RoleName = "Kullanıcı";
                break;
            case "QuestionAndAnswerTeam":
                Model.Roles[i].Role.RoleName = "SoruCevapEkibi";
                break;
            case "Administrator":
                Model.Roles[i].Role.RoleName = "Yönetici";
                break;
            case "Moderator":
                Model.Roles[i].Role.RoleName = "Moderatör";
                break;
        }
    }

}
<a href="/AdminAuthorization/Index" class="btn btn-primary">
    <i class="far fa-arrow-alt-circle-left"></i> &nbsp; Geri Dön
</a>

<h3 style="text-align: center">@Model.User.UserUsername kullanıcısı işlemleri</h3> <br/><br />


<table class="table table-striped">
    <thead>
        <tr>
            <th>Yetki işlemleri</th>
            <th>Banlama işlemleri</th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
                    Yetki Verme
                </button>
                <button class="btn btn-warning" data-toggle="modal" data-target="#Modal2">
                    Yetki Alma
                </button>
            </td>
            <td>
                <a href="../AdminWriters/BanUser?userId=@Model.User.UserId&&status=false" class="btn btn-danger">Banla</a>
                <a href="../AdminWriters/BanUser?userId=@Model.User.UserId&&status=true" class="btn btn-warning">Banı kaldır</a>
            </td>
        </tr>

    </tbody>
</table>



<div class="modal fade" id="Modal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLongTitle">Yetki verme</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("GiveAuthorization", "AdminAuthorization", FormMethod.Post))
            {
                <div class="modal-body">

                    @Html.HiddenFor(x => x.User.UserId)

                    @for (int i = 0; i < Model.Roles.Count; i++)
                    {
                        if (Model.Roles[i].IsSelected == true)
                        {
                            <div class="col-sm-10">
                                @Html.HiddenFor(x => x.Roles[i].Role.RoleId)
                                <div class="form-check col-sm-10">
                                    <input class="form-check-input" type="checkbox" value="" id="@Model.Roles[i].Role.RoleId" disabled checked="checked">
                                    <label class="col-sm-2" style="font-size: 20px" for="@Model.Roles[i].Role.RoleId">
                                        @Model.Roles[i].Role.RoleName
                                    </label>
                                </div>
                            </div>

                        }
                        else
                        {
                            <div class="col-sm-10">
                                @Html.HiddenFor(x => x.Roles[i].Role.RoleId)
                                <div class="form-check col-sm-10">
                                    <input class="form-check-input" type="checkbox" value="" id="@Model.Roles[i].Role.RoleId">
                                    <label class="col-sm-2" style="font-size: 20px" for="@Model.Roles[i].Role.RoleId">
                                        @Model.Roles[i].Role.RoleName
                                    </label>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            }


        </div>
    </div>
</div>



