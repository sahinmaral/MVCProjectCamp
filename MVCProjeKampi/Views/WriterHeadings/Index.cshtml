@using EntityLayer.Concrete
@using PagedList.Mvc
@using PagedList
@model IPagedList<Heading>

@{
    ViewBag.Title = "Başlıklarınız";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@{
    string statusClass = "";
    string statusMessage = "";
    string deleteButtonClass = "";

    void CheckHeadingStatus(bool headingStatus)
    {
        switch (headingStatus)
        {
            case true:
                statusClass = "badge bg-success";
                statusMessage = "Aktif";
                deleteButtonClass = "btn btn-danger btn-sm";
                break;
            case false:
                statusClass = "badge bg-danger";
                statusMessage = "Pasif";
                deleteButtonClass = "btn btn-danger btn-sm disabled";
                break;
        }
    }
}


<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">

            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                ID
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>

                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 8%" class="text-center">
                                Durum
                            </th>
                            <th style="width: 20%" class="text-center">
                                Diğer
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.HeadingId
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @item.HeadingDate.ToShortDateString()
                                    </small>
                                </td>
                                <td class="project-state">
                                    <h3><span class="badge bg-info">@item.Category.CategoryName</span></h3>
                                </td>
                                <td class="project-state">
                                    @{ CheckHeadingStatus(item.HeadingStatus);
                                        <h3><span class="@statusClass">@statusMessage</span></h3>
                                    }
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/baslik/@item.HeadingNameForFriendlyUrl">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>

                                    <a class="btn btn-info btn-sm" href="/yazar-profil/basligini-duzenle/@item.HeadingNameForFriendlyUrl">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="@deleteButtonClass" href="/yazar-profil/basligi-sil/@item.HeadingNameForFriendlyUrl">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
<a href="/yazar-profil/baslik-ekle" class="btn btn-primary">Yeni Başlık Girişi</a>

<br/> <br/>

@Html.PagedListPager((IPagedList)Model,
    p => Url.Action("Index",
        new { p })
    ,
    new PagedListRenderOptions
    {
        LiElementClasses = new List<string>
        {
            {"page-link"}
        },
        UlElementClasses = new List<string>
        {
            {"pagination justify-content"}
        }
    }
    )





