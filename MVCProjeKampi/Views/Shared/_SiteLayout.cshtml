
@{
    

    Layout = null;
    string username = "";

    if (Session["Username"] == null)
    {
        username = "";
    }

    else
    {
        username = Session["Username"].ToString();
    }

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewBag.Title</title>
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css" />
    <!-- IonIcons -->
    @*<link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />*@
    <!-- summernote -->
    <link rel="stylesheet" href="~/Content/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.css" />
    <!-- Theme style -->
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Content/AdminLTE-3.0.4/plugins/icheck-bootstrap/icheck-bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/AdminLTE-3.0.4/dist/css/adminlte.min.css" />

    <!-- Sweet Alert -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script src="~/Content/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet" />
</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to to the body tag
to get the desired effect
|---------------------------------------------------------|
|LAYOUT OPTIONS | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->
<body class="hold-transition sidebar-mini">
    <div class="wrapper">




        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <img src="~/Content/AdminLTE-3.0.4/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">MVC Proje Kampı</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->

                
                @{
                    if (username.Equals(""))
                    {
                        @Html.Action("Logoff", "Homepage")
                    }
                    else
                    {
                        @Html.Action("Logon","Homepage")
                    }
                }

               
                <!-- Sidebar Menu -->
                @Html.Action("Sidebar", "Homepage")
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                    
                        
                        <div class="mb-3" style="margin-left: 2em">
                            <div class="container d-flex flex-wrap justify-content-center">
                                <form class="col-12 col-lg-auto mb-2 mb-lg-0 me-lg-auto">
                                    <input type="search" class="form-control" placeholder="başlık" aria-label="Search" style="width:15em">
                                    <button type="submit" class="btn btn-success" style="margin-left: 15.5em; margin-top:-4.2em"><i class="fas fa-search"></i></button>
                                </form>
                            </div>
                        </div>

                       
                        


                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content" style="margin-left:3em">
                @RenderBody()
                <!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
    </div>

    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <!-- Bootstrap -->
    <script src="~/Content/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/Content/AdminLTE-3.0.4/dist/js/adminlte.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <!--icheck-mailbox-->
    <script src="~/Content/AdminLTE-3.0.4/plugins/icheck-bootstrap/icheck-mailbox.js"></script>
    <!-- OPTIONAL SCRIPTS -->
    <script src="~/Content/AdminLTE-3.0.4/plugins/chart.js/Chart.min.js"></script>
    <script src="~/Content/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <script src="~/Content/AdminLTE-3.0.4/dist/js/pages/dashboard3.js"></script>
    <!-- Summernote -->
    <script src="~/Content/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- Page Script -->
    <script>
        $(function () {
            //Add text editor
            $('#compose-textarea').summernote()
        })
    </script>
    @*<script src="~/Content/skillcard/js/jquery-1.11.1.min.js">$.noConflict</script>*@

</body>
</html>
