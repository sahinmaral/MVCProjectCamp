@using EntityLayer.Concrete
@using PagedList
@using PagedList.Mvc
@model IPagedList<Category>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    string CheckCategoryStatus(bool categoryStatus)
    {
        switch (categoryStatus)
        {
            case true:
                return "Normal";
            case false:
                return "Silinmiş";
        }
    }
}

@*Sebebini anlamadığım şekilde kategori hariç
    diğer sayfalarda çoklu yenilemelerde sidebar küçülüyor.*@

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Kategori İşlemleri</th>
        <th>Kategori Durumu</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td>@CheckCategoryStatus(item.CategoryStatus)</td>
            <td>
                <a href="/admin-profil/kategori-sil/@item.CategoryName" class="btn btn-danger">Sil</a>
                <a href="/admin-profil/kategori-duzenle/@item.CategoryName" class="btn btn-warning">Güncelle</a>
                <a href="/admin-profil/baslik/@item.CategoryName" class="btn btn-primary">Başlıklar</a>
            </td>
        </tr>
    }
</table>

<a href="/admin-profil/kategori-ekle" class="btn btn-primary">Yeni Kategori Ekle</a>


    @Html.PagedListPager((IPagedList)Model,
            p => Url.Action("Index",
                new { p })
            ,
            new PagedListRenderOptions
            {
                LiElementClasses = new List<string>
                {
                    {"page-link"}
                },
                UlElementClasses = new List<string>
                {
                    {"pagination justify-content-center"}
                }
            }
            )
