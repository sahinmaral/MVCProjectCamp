@using EntityLayer.Concrete
@using PagedList
@using PagedList.Mvc
@model IPagedList<Category>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*Sebebini anlamadığım şekilde kategori hariç
    diğer sayfalarda çoklu yenilemelerde sidebar küçülüyor.*@

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Kategori Başlıklar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td><a href="../AdminHeadings/HeadingsByCategory/@item.CategoryId" class="btn btn-primary">Başlıklar</a></td>
        </tr>
    }

</table>
<br />


    @Html.PagedListPager((IPagedList)Model,
        p => Url.Action("Index",
            new { p })
        ,
        new PagedListRenderOptions
        {
            LiElementClasses = new List<string>
            {
                {"page-link"}
            },
            UlElementClasses = new List<string>
            {
                {"pagination justify-content-center"}
            }
        }
        )
