@model EntityLayer.Concrete.Category


@{
    ViewBag.Title = "Kategori Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<link href="~/Content/bootstrap.css" rel="stylesheet" />


@using (Html.BeginForm("UpdateCategory", "AdminCategories", FormMethod.Post))
{
<div class="form-group">

    @Html.Label("Kategori Id : ")
    @Html.TextBoxFor(x => x.CategoryId, new { @readonly = "readonly", @class = "form-control" })
    <br /><br />
    @Html.Label("Kategori Adı : ")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryName)
    <br /><br />
    @Html.Label("Açıklamayı yazınız")
    @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryDescription)
    <br /><br />
    @Html.Label("Durumunu işaretleyiniz")
    <div class="form-check">
        @Html.RadioButtonFor(x => x.CategoryStatus, "True", new { @class = "form-check-input" })
        <label class="form-check-label" for="flexRadioDefault1">
            Onaylandı
        </label>
    </div>
    <div class="form-check">
        @Html.RadioButtonFor(x => x.CategoryStatus, "False", new { @class = "form-check-input" })
        <label class="form-check-label" for="flexRadioDefault2">
            Onaylanmadı
        </label>
    </div>
    <br /><br />
    <button class="btn btn-info">Kaydet</button>
</div>
}

