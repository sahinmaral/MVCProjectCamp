@model MVCProjeKampi.Models.ViewModels.CountOfMessagesViewModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kategoriler</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <ul class="nav nav-pills flex-column">
            <li class="nav-item active">
                <a href="/AdminContacts/Index" class="nav-link">
                    <i class="fas fa-mail-bulk"></i> İletişim
                    <span class="badge bg-primary float-right">@Model.ContactCount</span>
                </a>
            </li>
            <li class="nav-item active">
                <a href="/AdminMessages/Inbox" class="nav-link">
                    <i class="fas fa-inbox"></i> Gelen Mesajlar
                    <span class="badge bg-primary float-right">@Model.ReceivedMessageCount</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/AdminMessages/SendBox" class="nav-link">
                    <i class="far fa-envelope"></i> Gönderilen Mesajlar
                    <span class="badge bg-primary float-right">@Model.SentMessageCount</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">
                    <i class="far fa-file-alt"></i> Taslak
                    <span class="badge bg-primary float-right">@Model.DraftCount</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="/AdminMessages/Archive" class="nav-link">
                    <i class="fas fa-archive"></i> Arşiv
                    <span class="badge bg-primary float-right">@Model.ArchiveCount</span>
                </a>
            </li>
            @*<li class="nav-item">
            <a href="#" class="nav-link">
                <i class="far fa-trash-alt"></i> Çöp Kutusu
            </a>
        </li>*@
        </ul>
    </div>
    <!-- /.card-body -->
</div>


